                    <div class="form-group"> <input class="form-control" type="text" name="comment[body]" placeholder="comment"> </div>
                    <div class="form-group"> <button class="btn btn-lg btn-primary btn-block">Submit!</button> </div>
    
                </form>   
                <a href="/posts">Go Back</a>
            </div>
    
    </div>
 </div>
