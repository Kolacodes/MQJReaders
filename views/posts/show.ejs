<!-- ################  NAVBAR SECTION      ########################################## -->
  
  
<div class="menu-wrap">
  <input type="checkbox" class="toggler">
  <div class="hamburger"><div></div></div>
  <div class="menu">
    <div>
      <div>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="http://www.myquranjourney.net">About</a></li>
          <li><a href="tel:07061862072">Contact</a></li>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Signup</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>



<!-- ################  SHOWCASE SECTION      ########################################## -->

  <div class="customContainer">
    <div class="mobileBar wrapperOne">
        <div class="toggler showcaseWrapItemOne">
          <!-- Toggler Goes Here -->
        </div>
        <div class="logo showcaseWrapItemTwo">
          <a href="/">
          <img src="/images/logo2.jpeg" alt="" class="MobileBarBrandingLogo"> </a>
        </div>
        <div class="padlock showcaseWrapItemThree">
          <!-- Padlock Goes Here -->
        </div>
   </div>
   <div class="clr"></div>
  </div>
  <!-- end of showcase -->


<!-- article section -->
<section class="container">
  <div class="blogPostSection">
    <article>

      <h1 class="blogTitle"><%-found_post.title%></h1>
						<div class="author">&copy; <%-found_post.author%></div>
						<!-- <br> -->

			<div class="author"><%-found_post.date%></div>
			<img class="figure" src="<%=found_post.image%>" alt="">

			<br>
			<div class="body"><%-found_post.body%></div>

    </article>
  </div> 
</section>
<!-- end of article section -->



												
<!-- ################  COMMENT SECTION      ########################################## -->


					
<section class="commentSection">
      <p>
          <button class="commentCounterBtn">
            <a class="commentCounterText" href="#">
              <%= found_post.comments.length %>
            COMMENT<% if (found_post.comments.length > 1){%>S
                  <% } else {}; %>
            </a>
        </button>
          <button class="addNewCommentBtn pullRight">
              <a class="addNewCommentText" href="/posts/<%=found_post._id%>/comments/new">
                Add New Comment
              </a>
          </button>
      </p>

      <br>
      <br>

    <% found_post.comments.forEach(function(comment){ %>
          
      <div class="row">
        <div class="col-md-12"></div>
            <p>
              <i class="fa fa-user" aria-hidden="true"></i>    
              <strong style="color: rgb(222, 191, 115)">
                <%= comment.author.username %>
              </strong>
            </p>
            
          <p style="font-size: small;"><%= comment.body %></p>
          <br>

      <% if(currentUser && String(comment.author.id) === String(currentUser._id)){ %>
          <a class="btn btn-xs btn-warning"
            href="/posts/<%=found_post._id%>/comments/<%=comment._id%>/edit">
            Edit
          </a>
          <form id="delete-book" action="/posts/<%=found_post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
            <input type="submit" class="btn btn-xs btn-danger" value="Delete"> </input>
          </form>
      <% }%>
      </div>
    <% }); %>
    <button class="read-more">
      <a href="http://myquranjourney.net">
        Join us in this journey!
      </a>
    </button>

</section>
              <!-- <div class="read-more"><a href="http://myquranjourney.net">Join us in this journey!</a></div> -->



<!-- ################  End of comment section      ########################################## -->




